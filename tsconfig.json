{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "./src/types/*"]
      }
    },
    "include": ["src/**/*.ts"]
  }
  